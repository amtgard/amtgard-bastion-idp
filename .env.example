# Application settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:37080
APP_SECRET=change_this_to_a_random_string

# Database settings
DB_DRIVER=pdo_mysql
DB_HOST=amtgard-idp-db
DB_PORT=3306
DB_NAME=idp
DB_USER=idp
DB_PASS=secret

REDIS_PUBLISHER_NAME=amtgard-idp

JWT_KEY=jwt_key
AUTH_SERVER_DEFUSE_KEY=auth_server_defust_key

# OAuth settings
OAUTH_PRIVATE_KEY=/var/www/idp.amtgard.com/dev-keys/private.key
OAUTH_PUBLIC_KEY=/var/www/idp.amtgard.com/dev-keys/public.key
OAUTH_ENCRYPTION_KEY=change_this_to_a_random_string
OAUTH_ACCESS_TOKEN_TTL=3600
OAUTH_REFRESH_TOKEN_TTL=1209600

# Google OAuth settings
GOOGLE_CLIENT_ID=google_client_id
GOOGLE_CLIENT_SECRET=google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:37080/auth/google/callback

# Facebook OAuth settings
FACEBOOK_CLIENT_ID=facebook_client_id
FACEBOOK_CLIENT_SECRET=facebook_client_secret
FACEBOOK_REDIRECT_URI=http://localhost:37080/auth/facebook/callback

# Discord OAuth settings
DISCORD_CLIENT_ID=discord_client_id
DISCORD_CLIENT_SECRET=discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:37080/auth/discord/callback

MANAGEMENT_KEY=MANAGEMENTKEY
# ORK Service settings
ORK_API_USER_AGENT="bogus_user_agent"
ORK_API_REFERER="bogus_referer"
