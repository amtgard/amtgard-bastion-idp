# Application settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_SECRET=change_this_to_a_random_string

# Database settings
DB_DRIVER=pdo_mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=idp_server
DB_USER=root
DB_PASS=

# OAuth settings
OAUTH_PRIVATE_KEY=/path/to/private.key
OAUTH_PUBLIC_KEY=/path/to/public.key
OAUTH_ENCRYPTION_KEY=change_this_to_a_random_string
OAUTH_ACCESS_TOKEN_TTL=3600
OAUTH_REFRESH_TOKEN_TTL=1209600

# Google OAuth settings
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Facebook OAuth settings
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/auth/facebook/callback