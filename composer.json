{
    "name": "amtgard/idp-server",
    "description": "IDP server for Amtgard domains using Slim framework and PHPLeague OAuth components",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "doctrine/orm": "^2.10",
        "league/oauth2-client": "^2.6",
        "league/oauth2-facebook": "^2.2",
        "league/oauth2-google": "^4.0",
        "league/oauth2-server": "^8.3",
        "monolog/monolog": "^2.3",
        "php-di/php-di": "^6.3",
        "php-di/slim-bridge": "^3.2",
        "ramsey/uuid": "^4.2",
        "robmorgan/phinx": "^0.16.8",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "symfony/cache": "^5.4",
        "tuupola/slim-jwt-auth": "^3.6",
        "twig/twig": "^3.21",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Amtgard\\IdP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amtgard\\IdP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "cs": "phpcs",
        "stan": "phpstan analyse src tests"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
