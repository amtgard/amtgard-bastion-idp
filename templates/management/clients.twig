{% extends "base.twig" %}

{% block title %}Manage Clients{% endblock %}

{% block container_class %}max-w-full{% endblock %}

{% block content %}
<div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Manage Clients</h1>
        <a href="/resources/profile" class="text-primary hover:text-primary-dark font-semibold flex items-center">
            <i class="fas fa-arrow-left mr-2"></i> Back to Profile
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200">
            <thead>
                <tr class="bg-gray-100">
                    <th class="py-2 px-2 border-b text-left w-12">ID</th>
                    <th class="py-2 px-2 border-b text-left w-1/6">Client ID</th>
                    <th class="py-2 px-2 border-b text-left w-1/6">Client Secret</th>
                    <th class="py-2 px-2 border-b text-left w-1/6">Name</th>
                    <th class="py-2 px-2 border-b text-left w-1/4">Redirect URI</th>
                    <th class="py-2 px-2 border-b text-center w-24">Confidential</th>
                    <th class="py-2 px-2 border-b text-center w-24">Dev</th>
                    <th class="py-2 px-2 border-b text-center w-24">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Create New Client Row -->
                <tr class="bg-gray-50">
                    <form action="/management/clients" method="POST">
                        <td class="py-2 px-2 border-b text-gray-500">New</td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="client_id" placeholder="Client ID" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="client_secret" value="{{ newClientSecret }}" readonly class="w-full px-2 py-1 border rounded bg-gray-100 text-gray-500 cursor-not-allowed">
                            <input type="hidden" name="client_secret" value="{{ newClientSecret }}">
                        </td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="name" placeholder="Name" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="redirect_uri" placeholder="Redirect URI" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b text-center">
                            <input type="checkbox" name="is_confidential" value="1">
                        </td>
                        <td class="py-2 px-2 border-b text-center">
                            <input type="checkbox" name="is_dev" value="1">
                        </td>
                        <td class="py-2 px-2 border-b text-center">
                            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm w-full">
                                <i class="fas fa-plus"></i> Add
                            </button>
                        </td>
                    </form>
                </tr>

                <!-- Existing Clients -->
                {% for client in clients %}
                <tr>
                    <form action="/management/clients/{{ client.id }}" method="POST">
                        <td class="py-2 px-2 border-b">{{ client.id }}</td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="client_id" value="{{ client.identifier }}" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="client_secret" value="{{ client.clientSecret }}" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="name" value="{{ client.name }}" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b">
                            <input type="text" name="redirect_uri" value="{{ client.redirectUri }}" required class="w-full px-2 py-1 border rounded">
                        </td>
                        <td class="py-2 px-2 border-b text-center">
                            <input type="checkbox" name="is_confidential" value="1" {% if client.isConfidential %}checked{% endif %}>
                        </td>
                        <td class="py-2 px-2 border-b text-center">
                            <input type="checkbox" name="is_dev" value="1" {% if client.isDev %}checked{% endif %}>
                        </td>
                        <td class="py-2 px-2 border-b text-center">
                            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm w-full">
                                <i class="fas fa-save"></i> Save
                            </button>
                        </td>
                    </form>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
