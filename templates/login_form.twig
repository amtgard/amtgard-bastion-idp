{% extends "base.twig" %}

{% block title %}Login - Amtgard Identity Provider{% endblock %}

{% block content %}
<div class="max-w-[800px] mx-auto">
    <div class="md:flex md:gap-8 md:items-start">
        <!-- Desktop Logo -->
        <div class="hidden md:block flex-shrink-0">
             <img src="/images/idp_logo_small.jpeg" alt="Amtgard IDP Logo" class="rounded-lg">
        </div>

        <div class="flex-grow max-w-[500px]">
            <h1 class="text-3xl font-serif font-bold text-secondary text-center mb-6">Login to Amtgard</h1>
            
            <div class="flex justify-center mb-6 md:hidden">
                <img src="/images/idp_logo_tiny.jpeg" alt="Amtgard IDP Logo" class="rounded shadow-sm">
            </div>
            
            <div class="text-center mb-6">
                <div class="space-y-2 mb-4">
                    <a href="/auth/google?redirect={{ redirect }}&jwtpublickey={{ jwtpublickey }}" class="block w-full bg-[#DB4437] hover:bg-[#c53929] text-white py-2.5 rounded transition-colors duration-200 decoration-0">Google</a>
                    <a href="/auth/facebook" class="block w-full bg-[#4267B2] hover:bg-[#365899] text-white py-2.5 rounded transition-colors duration-200 decoration-0">Facebook</a>
                </div>
                
                <button type="button" onclick="toggleLogin()" class="group flex items-center justify-center gap-2 mx-auto text-gray-600 hover:text-gray-800 transition-colors focus:outline-none">
                    <span>Login with Email</span>
                    <!-- Default state: Point UP (rotate-180 if using a down chevron, or just an up chevron) -->
                    <!-- Using a standard Down Chevron, so rotate-180 points it UP -->
                    <svg id="login-chevron" xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform duration-300 transform rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
            </div>

            <div id="login-form-container" class="max-h-0 overflow-hidden transition-all duration-500 ease-in-out opacity-0">
                <form action="/auth/login" method="post" class="mb-6">
                    <div class="mb-4">
                        <input type="email" id="email" name="email" required placeholder="Email" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                    </div>
                    <div class="mb-6">
                        <input type="password" id="password" name="password" required placeholder="Password" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                    </div>
                    <button type="submit" class="w-full bg-primary hover:bg-primary-dark text-white font-medium py-2.5 px-4 rounded transition-colors duration-200">Login</button>
                </form>
                
                <div class="text-center mt-8 pt-4 border-t border-gray-100">
                    <p class="text-gray-600">Don't have an account? <a href="/auth/register" class="text-primary hover:text-primary-dark font-medium hover:underline">Register</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
    function toggleLogin() {
        const form = document.getElementById('login-form-container');
        const icon = document.getElementById('login-chevron');
        
        if (form.style.maxHeight) {
            // Currently open, so CLOSE it
            form.style.maxHeight = null;
            form.classList.remove('opacity-100');
            form.classList.add('opacity-0');
            // Rotate UP (180deg)
            icon.classList.add('rotate-180');
        } else {
            // Currently closed, so OPEN it
            form.style.maxHeight = form.scrollHeight + "px";
            form.classList.remove('opacity-0');
            form.classList.add('opacity-100');
            // Rotate DOWN (0deg)
            icon.classList.remove('rotate-180');
        }
    }
</script>
{% endblock %}